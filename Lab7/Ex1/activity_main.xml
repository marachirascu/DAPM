<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/buttonListen"
        android:text="LISTEN IT!"
        android:background="#D75454"
        android:textSize="16sp"
        android:textStyle="bold"
        android:onClick="onListenMic"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <EditText
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:backgroundTint="#FFFFFF"
        android:layout_gravity="fill_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Hello World!"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonMic"
        android:text="Tap to open mic"
        android:textAllCaps="false"
        android:background="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        android:onClick="onOpenMic"
        android:textColor="#D75454"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

</LinearLayout>
